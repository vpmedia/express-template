{
  "name": "@vpmedia/express-template",
  "version": "1.0.0",
  "description": "Express Template",
  "author": "Andras Csizmadia <andras@vpmedia.hu> (www.vpmedia.hu)",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/vpmedia/express-template#readme",
  "bugs": {
    "url": "https://github.com/vpmedia/express-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpmedia/express-template.git"
  },
  "keywords": [],
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "bin": {
    "server": "./src/index.js"
  },
  "scripts": {
    "start": "SENTRY_DEBUG=1 node --import ./src/instrument.js ./src/index.js",
    "watch": "SENTRY_DEBUG=1 nodemon --import ./src/instrument.js ./src/index.js",
    "prebuild": "rm -rf ./build && rm -rf ./lib",
    "build": "rollup -c",
    "postbuild": "chmod +x ./build/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json,md,css}\"",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "lint-fix": "eslint \"**/*.{js,jsx}\" --fix",
    "typecheck": "tsc",
    "prepack": "npm run build",
    "lefthook:install": "lefthook install",
    "lefthook:uninstall": "lefthook uninstall",
    "prisma:pull": "dotenv -e .env -- prisma db pull",
    "prisma:format": "prisma-case-format -p --file ./prisma/schema.prisma",
    "prisma:generate": "dotenv -e .env -- prisma generate"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.52.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.52.0",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@opentelemetry/instrumentation-express": "^0.41.0",
    "@opentelemetry/instrumentation-http": "^0.52.1",
    "@opentelemetry/instrumentation-socket.io": "^0.41.0",
    "@opentelemetry/instrumentation-winston": "^0.39.0",
    "@opentelemetry/resources": "^1.24.0",
    "@opentelemetry/sdk-metrics": "^1.24.0",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/sdk-trace-node": "^1.24.0",
    "@opentelemetry/semantic-conventions": "^1.24.0",
    "@prisma/client": "^5.17.0",
    "@prisma/instrumentation": "^5.17.0",
    "@sentry/node": "^8.18.0",
    "@wesleytodd/openapi": "^1.1.0",
    "bufferutil": "^4.0.8",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "prisma-case-format": "^2.2.1",
    "prom-client": "^15.1.3",
    "redis": "^4.6.15",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "uuid": "^10.0.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.7.0",
    "eslint-plugin-jsdoc": "^48.7.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "lefthook": "^1.7.3",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "rollup": "^4.18.1",
    "typescript": "^5.5.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  }
}
